<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".MainActivity"
    android:background="@color/black"
     >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lisa"
        android:scaleType="fitXY"
        android:src="@mipmap/lisa1"/>

    <ImageView
        android:layout_width="@dimen/pile_width"
        android:layout_height="@dimen/pile_height"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:rotation="-2"
        android:scaleType="fitXY"
        android:src="@mipmap/card_back"/>
    <ImageView
        android:id="@+id/deck"
        android:layout_width="@dimen/pile_width"
        android:layout_height="@dimen/pile_height"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:rotation="6"
        android:scaleType="fitXY"
        android:src="@mipmap/card_back"/>

    <ImageView
        android:id="@+id/pile_beneath"
        android:layout_width="@dimen/pile_width"
        android:layout_height="@dimen/pile_height"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/pile_margin"
        android:layout_marginTop="8dp"
        android:rotation="5"
        android:scaleType="fitXY"
        android:src="@mipmap/card_back"/>
    <ImageView
        android:id="@+id/pile"
        android:layout_width="@dimen/pile_width"
        android:layout_height="@dimen/pile_height"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/pile_margin"
        android:layout_marginTop="8dp"
        android:rotation="-3"
        android:scaleType="fitXY"
        android:src="@mipmap/card_back"/>





    <ImageView
        android:id="@+id/bubble"
        android:layout_width="@dimen/bubble_width"
        android:layout_height="@dimen/bubble_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:src="@mipmap/bubble"/>
    <TextView
        android:id="@+id/bubble_text"
        android:layout_width="@dimen/bubble_text_width"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/bubble_text_height"
        android:layout_marginTop="@dimen/bubble_text_marginTop"
        android:text=""
        android:textSize="@dimen/medium_text_size"/>

    <TextView
        android:id="@+id/cards_info"
        android:layout_width="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/color_chooser"
        android:layout_marginTop="@dimen/bubble_chooser_marginTop"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                android:id="@+id/choose_karo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/large_text_size"/>
            <TextView
                android:id="@+id/choose_herz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/large_text_size"/>
            <TextView
                android:id="@+id/choose_pik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"/>
            <TextView
                android:id="@+id/choose_kreuz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>